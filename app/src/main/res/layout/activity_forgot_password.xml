<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.ForgotPassward">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="162dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="-70dp"
        android:background="@drawable/splash_top" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:text="@string/recover_your_account"
        android:textColor="#004F9F"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleImage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-145dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/recover_account_mss"
        android:textColor="#9F1A1A1A"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/simpleImage"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="132dp"
        android:background="@drawable/text_field_green" />

    <Button
        android:id="@+id/recovery_btn"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:background="@drawable/roundedbuttonista"
        android:text="@string/recover_your_account"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/or_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleImage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="O"
        android:textColor="#9F1A1A1A"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/roundedbuttonista"
        android:text="Iniciar sesion"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent" />

</RelativeLayout>