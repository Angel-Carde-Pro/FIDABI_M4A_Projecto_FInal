<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">

    <ImageView
        android:id="@+id/more_btn2"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:layout_gravity="end"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/more_items_icon" />

    <TextView
        android:id="@+id/categories"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="10dp"
        android:text="@string/categories"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        android:text="@string/categories_id"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/user_profile_photo2"
        android:layout_width="600dp"
        android:layout_height="270dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="265dp"
        android:backgroundTint="#FD9D1A"
        android:src="@drawable/inventario_icon" />
</RelativeLayout>
