<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/debajo"
        android:layout_width="435dp"
        android:layout_height="675dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="-100dp"
        android:layout_marginBottom="-560dp"
        tools:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trazadogrande" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-145dp"
        android:layout_marginBottom="40dp"
        tools:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/debajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/trazadosmall" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="297dp"
        android:layout_height="481dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintBottom_toTopOf="@+id/debajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="309dp"
        android:layout_height="281dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="-370dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logoista" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:text="Bienvenido"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <EditText
        android:id="@+id/editmail"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:background="@drawable/roundededittext"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textSize="16dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <EditText
        android:id="@+id/edittextpassword"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:ems="10"
        android:paddingStart="16dp"
        android:textSize="16dp"
        android:hint="Contraseña"
        android:background="@drawable/roundededittext"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <Button
        android:id="@+id/buttonacept"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:background="@drawable/roundedbuttonista"
        android:text="Iniciar sesion"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/txtrecuperar"
        android:layout_width="254dp"
        android:layout_height="49dp"
        android:clickable="true"
        android:text="¿Olvidaste tu contraseña?"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>